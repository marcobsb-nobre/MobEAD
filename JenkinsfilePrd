pipeline {  
    environment {
      tagName = "marcos_nobre_unyleya"
      containerName = "aplicacao_ead"
      dockerImage = ''
    }
    agent any 
    stages { 
       stage('SonarQube analysis') {
            steps{
                script{
                    def scannerHome = tool 'sonarscan';
                    withSonarQubeEnv('sonarqube') {
                        sh "${tool("sonarscan")}/bin/sonar-scanner \
                            -Dsonar.projectKey=marcos_nobre_unyleya \
                            -Dsonar.projectName=marcos_nobre_unyleya"
                    }
                }
            }
        }
        stage('Build image') {
            steps{
                script {
                    dockerImage = docker.build tagName + ":$BUILD_NUMBER"
                }
            }
        }
        stage('Require approval') {
           input{
                message "Do you want to proceed for production deployment?"
           }
           steps {
                sh 'echo "Deploy into Prod"'

           }
        }
        stage('Deploy container') {
            steps {
                script {
                    sh  """
                        docker stop ${containerName} || true && \
                        docker rm ${containerName} || true && \
                        docker run -d --name teste -p 8180:80 ${dockerImage}
                    """
                }
            }
        }
    } 
}